<h1> Create/Update item </h1>
  <table>
    <tr>
      <td>Item Id</td>
      <td> <input type="textbox" id="itemId"></td>
    </tr>
    <tr>
      <td>Merchant Id</td>
      <td> <input type="textbox" id="merchantId"></td>
    </tr>
    <tr>
      <td>Name</td>
      <td> <input type="textbox" id="name"></td>
    </tr>
    <tr>
      <td>Category</td>
      <td> <input type="textbox" id="cat"></td>
    </tr>
    <tr>
      <td>Description</td>
      <td> <input type="textbox" id="desc"></td>
    </tr>
    <tr>
      <td>Image Link</td>
      <td> <input type="textbox" id="imageLink"></td>
    </tr>
    <tr>
      <td>Price</td>
      <td> <input type="textbox" id="price"></td>
    </tr>
    <tr>
      <td>Quantity</td>
      <td> <input type="textbox" id="quantity"></td>
    </tr>
    <tr>
      <td colspan="2"> <input type="button" value="submit" onclick="addItem();">
    </tr>
  </table>
<h1> Items </h1>
  <table>
    <tr>
      <td> itemid </td>
      <td> itemcat </td>
      <td> itemdesc </td>
      <td> quantity </td>
      <td> merchantid </td>
      <td> itemname </td>
      <td> price </td>
      <td> itemimagelink </td>
    </tr>
    {{#each items}}
      <tr>
        <td> {{itemid}} </td>
        <td> {{itemcat}} </td>
        <td> {{itemdesc}} </td>
        <td> {{quantity}} </td>
        <td> {{merchantid}} </td>
        <td> {{itemname}} </td>
        <td> {{price}} </td>
        <td> <img src="{{itemimagelink}}"> </td>
      </tr>
    {{/each}}
  </table>
