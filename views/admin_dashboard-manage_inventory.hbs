<!--Description: This is the body of the admin_dashboard-manage_inventory page-->
<div style="margin-top: 30px;margin-bottom: 50px;">
      <div class="container-fluid">
        <div>
          <h1 id="welcomeName" style="color: rgb(133,135,150);font-size: 35px; padding-bottom: 35px; padding-left: 85px;"><strong>Hi There, {{userInfo.firstname}}!</strong></h1>
        </div>
          <!--This is the part that has the nav bar with the dashboard, manage inventory, manage orders, and manage accounts-->
          <div class="row justify-content-center align-items-center" style="height: 100%;">
              <div class="col-auto col-sm-11 col-md-9 col-lg-9 col-xl-11 text-break text-center align-self-center m-auto" style="padding: 5px;padding-left: 40px;">
                  <div class="card">
                      <div class="card-header">
                          <ul class="nav nav-tabs card-header-tabs">
                              <li class="nav-item"><a class="nav-link" href="/login" style="font-size: 20px;">Dashboard</a></li>
                              <li class="nav-item"><a class="nav-link active" href="/admin_dashboard/manage_inventory" style="font-size: 20px;">Manage Inventory</a></li>
                              <li class="nav-item"><a class="nav-link" href="/admin_dashboard/manage_orders" style="font-size: 20px;">Manage Order(s)</a></li>
                              <li class="nav-item"><a class="nav-link" href="/admin_dashboard/manage_accounts" style="font-size: 20px;">Manage Accounts</a></li>
                          </ul>
                      </div>
                      <!--This is manage inventory section on the top of page-->
                      <div class="card-body">
                          <h4 class="card-title" style="font-size: 28px;margin-top: 20px;">Manage Inventory</h4>
                          <div class="text-right"><a href = "/admin_dashboard/manage_inventory/create_inventory"><button class="btn btn-primary" type="button" style="margin-top: 15px;background-color: rgb(79,121,96);font-size: 18px;">Add Item</button></a></div>
                          <div class="col align-self-center m-auto">
                              <!--This is the inventory list-->
                              <h4 style="margin-top: 35px;"><em>Inventory List</em></h4>
                              <div class="table-responsive" style="margin-top: 40px;padding: 10px;height: 280px;">
                                  <!--This is the table with the inventory items-->
                                  {{#if hasInventory}}
                                  <table class="table table-hover">
                                      <thead>
                                          <tr>
                                              <th>Item ID</th>
                                              <th>Name</th>
                                              <th>Category</th>
                                              <th>Quantity</th>
                                              <th>Price</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                        {{#each inventory}}
                                          <tr>
                                              <td><a href="/admin_dashboard/manage_inventory/sub_inventory/{{itemid}}">{{itemid}}</a></td>
                                              <td>{{itemname}}</td>
                                              <td>{{itemcat}}</td>
                                              <td>{{quantity}}</td>
                                              <td>{{price}}</td>
                                          </tr>
                                        {{/each}}
                                      </tbody>
                                  </table>
                                  {{else}}
                                  <p> We have no inventory you should add some items! </p>
                                  {{/if}}
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>


<script src="../javascripts/client.js" async></script>
