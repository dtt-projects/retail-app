<!--This is the logout function-->
<script> function eraseCookie() {
  // make the api call
  fetch("/api/logout",
    {method: "POST",
      headers: {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
    })
    .then(function(response) {
      if (response.status !== 200) {
        alert("Logout failed. Try again.");
        location.reload(true);
        return
      } else {
        // send to a webpage
        location.reload(true);
        return;
      }
    });
}

</script>
